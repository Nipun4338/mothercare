
@{
    ViewBag.Title = "Verify";
}
@{
    var data = ViewBag.Message;
    var status = ViewBag.Status;
}

@if (status == 0)
{
    <div class="alert alert-danger" role="alert">
        <h3 style="text-align:center">@data</h3>
    </div>

}
else
{
    <div class="alert alert-success" role="alert">
        <h3 style="text-align:center">@data</h3>
    </div>
}
