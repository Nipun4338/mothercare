@model IEnumerable<mothercare.Data.Tbl_Members>
@{
    ViewBag.Title = "Users Info";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="../Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Users Info</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user"></i>
            Users Info
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="datatablesSimple" width="100%" cellspacing="0" style="text-align:center">
                    <thead>
                        <tr>
                            <th style="text-align:center">Member ID</th>
                            <th style="text-align:center">Name</th>
                            <th style="text-align:center">Email</th>
                            <th style="text-align:center">IsActive</th>
                            <th style="text-align:center">IsDelete</th>
                            <th style="text-align:center">Created On</th>
                            <th style="text-align:center">Phone</th>
                            <th style="text-align:center">Address</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th style="text-align:center">Member ID</th>
                            <th style="text-align:center">Name</th>
                            <th style="text-align:center">Email</th>
                            <th style="text-align:center">IsActive</th>
                            <th style="text-align:center">IsDelete</th>
                            <th style="text-align:center">Created On</th>
                            <th style="text-align:center">Phone</th>
                            <th style="text-align:center">Address</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.MemberId</td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.EmailId</td>
                            <td>@item.IsActive</td>
                            <td>@item.IsDelete</td>
                            <td>@item.CreatedOn</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>

                                @Html.ActionLink("Edit", "UserEdit", new { userId = item.MemberId })
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

